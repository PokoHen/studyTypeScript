{
    "compilerOptions": {
        // target : 무슨 버전의 javascript를 쓸 것인지
        "target": "ES6",

        // module : 무슨 import 문법을 쓸 것인지
        "module": "commonjs",

        // allowJs : js 파일들 ts에서 import해서 쓸 수 있는지
        "allowJs": true,

        // checkJs : 일반 js 파일에서도 에러 체크 여부
        "checkJs": true,

        // jsx : tsx파일을 jsx로 어떻게 컴파일 할 것인지 - react-native, preserve, react
        "jsx" : "preserve",
        
        // declaration : 컴파일시 .d.ts 파일도 자동 생성 (현재 쓴느 모든 타입이 정의된 파일)
        "declaration": true,

        // outFile : "./" : 모든 ts파일을 js파일 하나로 컴파일 해줌
        // "outFile": "./",

        // outDir : js파일 아웃풋 경로 바꾸기
        // "outDir" : "./",

        // rootDir : 루트경로 바꾸기 (js 파일 아웃풋 경로에 영향을 준다)
        // "rootDir": "../",

        // removeComments : 컴파일시 주석 제거
        "removeComments": true,

        // strict : strict관련 noimplicit 관련 모드 전부 켜기
        // "strict" : true,

        // noImplicitAny : any타입 금지 여부 
        "noImplicitAny": true,

        // strictNullChecks : 오류 터미널에 나타내기
        "strictNullChecks": true,

        // strictFunctionTypes : 함수 파라미터 타입체크 강하게
        "strictFunctionTypes": true,

        // strictPropertyInitialization : Class, constructor 작성시 타입체크 강하게
        "strictPropertyInitialization": true,

        // noImplicitThis : this 키워드가 any타입일 경우 에러내기
        "noImplicitThis": true,

        // alwaysStrict : 자바스크립트 "use strict" 모드 켜기
        "alwaysStrict": true,

        // noUnusedLocals : 쓰지 않는 지역변수 있으면 에러내기
        "noUnusedLocals": true,

        // noUnusedParameters : 쓰지 않는 파라미터 있으면 에러내기
        "noUnusedParameters": true,

        // noImplicitReturns : 함수에서 return 빼먹으면 에러내기
        "noImplicitReturns": true,

        // noFallthroughCasesInSwitch : switch문 이상하면 에러내기
        "noFallthroughCasesInSwitch": true,
        
    }
}